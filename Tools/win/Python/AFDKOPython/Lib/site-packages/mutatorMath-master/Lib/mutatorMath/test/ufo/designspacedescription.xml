<?xml version="1.0" encoding="utf-8"?>
<designspace format="3">
    <!-- This document shows an example of designspace description. -->
    <!-- "location" tag defines a designspace coordinate. "name" attribute is required and must be unique. -->
    <!-- "location" tag contains one or more "dimension" tags. "name" attribute is required. "xvalue" attribute is required. "yvalue" attribute is optional (for anisotropic coordindates) -->
    <locations>
        <location name="location-token-aaa">
            <dimension name="width" xvalue="0.000000"/>
            <dimension name="weight" xvalue="0.000000"/>
        </location>
        <location name="location-token-bbb">
            <dimension name="width" xvalue="1000.000000"/>
            <dimension name="weight" xvalue="0.000000"/>
        </location>
        <location name="location-token-ccc">
            <dimension name="width" xvalue="500.000000" yvalue="240.000000"/>
            <dimension name="weight" xvalue="0.000000"/>
        </location>
    </locations>
    <!-- "source" tag identifies a UFO source. "name" attribute is required and must be unique. "location" is optional. -->
    <sources>
        <source filename="LightCondensed.ufo" location="location-token-aaa" name="master-token-aaa1">
            <lib copy="1"/>
            <groups copy="1"/>
        </source>
        <source filename="BoldCondensed.ufo" location="location-token-bbb" name="master-token-bbb2"/>
        <source filename="LightCondensed.ufo" name="master-token-ccc3"/>
    </sources>
    <!-- source without a location can be referred to by name but won't be inserted by default -->
    <!-- instances -->
    <instances>
        <instance familyname="SuperFamily" filename="OutputNameInstance1.ufo" location="location-token-aaa" stylename="Regular">
            <!-- glyph, no unicode, default location -->
            <glyphs>
                <glyph name="logo"/>
                <glyph name="a" unicode="0x61"/>
                <glyph name="b" unicode="0x62">
                    <master location="location-token-aaa"/>
                </glyph>
                <glyph name="b" unicode="0x62">
                    <master location="location-token-aaa" source="master-token-aaa1"/>
                    <master location="location-token-bbb" source="master-token-aaa2"/>
                    <master glyphname="b.alt1" location="location-token-ccc" source="master-token-aaa3"/>
                </glyph>
            </glyphs>
            <!-- glyph, unicode, default location -->
            <!-- glyph, unicode, single master -->
            <!-- glyph, unicode, several masters -->
            <!-- font info -->
            <info location="location-token-aaa">
                <master source="master-token-aaa1">
                    <location>
                        <dimension name="weight" xvalue="1.000000"/>
                    </location>
                </master>
                <master source="master-token-aaa2">
                    <location>
                        <dimension name="weight" xvalue="2.000000"/>
                    </location>
                </master>
                <master source="master-token-aaa3">
                    <location>
                        <dimension name="weight" xvalue="3.000000"/>
                    </location>
                </master>
            </info>
            <!-- kerning -->
            <kerning>
                <master location="location-token-aaa" source="master-token-aaa1"/>
                <master location="location-token-bbb" source="master-token-aaa2"/>
                <master location="location-token-ccc" source="master-token-aaa3"/>
            </kerning>
        </instance>
    </instances>
</designspace>
